<h1>Edit selected article</h1>

<% if @article.errors.any? %>
<ul>
    <h3>Please try again. The following errors occured:</h3>
    <%@article.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
    <% end %>
</ul>    
<% end %>



<%= form_for @article do |f|%>
<p>
    <%= f.label :title %>
    <%= f.text_field :title%><br>
</p>

<p>
    <%= f.label :description%>
    <%= f.text_field :description%><br>
</p>
    <%= f.submit 'Edit Article'%>
<%end%>

<p><%= link_to "Back to articles listing", articles_path%></p>
